<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>WorldMapEvents</name>
    <events>
        <event-group description="" title="OnMouseOver">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="7" name="Cursor is over object" type="Mouse">
                            <param id="0" name="Object">WorldMap_loc_Slumy</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="5" name="Set frame" type="WorldMap_loc_Slumy">
                            <param id="0" name="Frame number">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="7" inverted="1" name="Cursor is over object" type="Mouse">
                            <param id="0" name="Object">WorldMap_loc_Slumy</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="5" name="Set frame" type="WorldMap_loc_Slumy">
                            <param id="0" name="Frame number">0</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="7" name="Cursor is over object" type="Mouse">
                            <param id="0" name="Object">WorldMap_loc_Hospoda</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="5" name="Set frame" type="WorldMap_loc_Hospoda">
                            <param id="0" name="Frame number">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="7" inverted="1" name="Cursor is over object" type="Mouse">
                            <param id="0" name="Object">WorldMap_loc_Hospoda</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="5" name="Set frame" type="WorldMap_loc_Hospoda">
                            <param id="0" name="Frame number">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="OnMouseClick">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="6" name="On object clicked" type="Mouse">
                            <param id="0" name="Mouse button">0</param>
                            <param id="1" name="Click type">0</param>
                            <param id="2" name="Object clicked">WorldMap_loc_Slumy</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">to_load_map</param>
                            <param id="1" name="Value">1</param>
                        </action>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">Layout 1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="6" name="On object clicked" type="Mouse">
                            <param id="0" name="Mouse button">0</param>
                            <param id="1" name="Click type">0</param>
                            <param id="2" name="Object clicked">WorldMap_loc_Hospoda</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">to_load_map</param>
                            <param id="1" name="Value">2</param>
                        </action>
                        <action id="-2" name="Go to layout" type="System">
                            <param id="0" name="Layout">Layout 1</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
